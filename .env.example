# MQTT1 Broker Configuration (Input Channel)
# This broker receives raw sensor data from IoT devices
MQTT1_CLIENT_ID=edge_server_input
MQTT1_BROKER_HOST=192.168.1.100
MQTT1_BROKER_PORT=1883
MQTT1_USERNAME=mqtt_user
MQTT1_PASSWORD=mqtt_password
MQTT1_TOPIC=sensor/+/+

# MQTT2 Broker Configuration (Output Channel)  
# This broker publishes processed data to downstream consumers
MQTT2_CLIENT_ID=edge_server_output
MQTT2_BROKER_HOST=192.168.1.101
MQTT2_BROKER_PORT=1884
MQTT2_USERNAME=mqtt_user
MQTT2_PASSWORD=mqtt_password
MQTT2_TOPIC=processed/data

# Optional: Database Configuration (if using external database)
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Optional: Logging Configuration
# RUST_LOG=info
# LOG_LEVEL=debug